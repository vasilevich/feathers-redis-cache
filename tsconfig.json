{
  "compilerOptions": {
    "noEmitOnError": true,
    "experimentalDecorators": true,
    "outDir": "build",
    "allowJs": true,
    "checkJs": false,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "module": "commonjs",
    "target": "es5",
    "sourceMap": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "noImplicitAny": false,
    "strictNullChecks": true,
    "lib": ["dom","es6", "es2016"]
  },
  "include": ["typings/index.d.ts", "src/**/*"],
  "exclude": [
    "node_modules",
    "build",
    "**/*.spec.ts",
    "**/*.test.ts"
  ]
}